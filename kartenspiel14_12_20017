#include<iostream>
#include <string.h>
#include<time.h>
#include <windows.h>
using namespace std;

struct Karte
{
	char name[10];
	char farbe[10];
	int wert;
};




void initFunk(struct Karte *karte, const char* farbe[], const char *name[])
{
	int x = 0;
	for(int farbAnz = 0; farbAnz<4; farbAnz++)
	{
		for(int i = 0; i < 13; i++)
		{
			strcpy(karte[x].name, name[i]);
			karte[x].wert = i + 2;
			
			if(karte[x].wert >= 10)
			{
				karte[x].wert = 10;
			}
			
			strcpy(karte[x].farbe, farbe[farbAnz]);
			x++;
		}
		karte[x-1].wert = 11;
	}
}


void mixFunk(struct Karte *karte, struct Karte *Kartenstapel)
{
	int x;
	time_t tim;
	srand( time(&tim) );
	int i;
	for( i = 0; i <= 51; )
	{
		int a = rand()%52;
		if( (Kartenstapel[a].wert)==0 )
		{
			Kartenstapel[a] = karte[i];
			i++;
		}
	}
}


